{
  "manifest_version": 3,
  "name": "CatchVoca",
  "version": "0.3.0",
  "description": "Local-First vocabulary learning with SM-2 spaced repetition",
  "author": "CatchVoca Team",

  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "declarativeNetRequest",
    "notifications",
    "clipboardRead",
    "offscreen",
    "scripting"
  ],

  "host_permissions": [
    "https://*/*"
  ],

  "action": {
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*", "file:///*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "naver_dict_referer",
        "enabled": true,
        "path": "rules/rule_endic.json"
      }
    ]
  },

  "commands": {
    "save-word": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Save selected word to CatchVoca"
    },
    "start-quiz": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Start quiz session"
    },
    "lookup-word-pdf": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "Look up word in PDF (auto-copy + lookup)"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      }
    }
  }
}
