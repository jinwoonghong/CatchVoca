{
  "manifest_version": 3,
  "name": "CatchVoca",
  "version": "0.1.0",
  "description": "Local-First vocabulary learning with SM-2 spaced repetition",
  "author": "CatchVoca Team",

  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "declarativeNetRequest",
    "notifications"
  ],

  "host_permissions": [
    "https://*/*"
  ],

  "action": {
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "naver_dict_referer",
        "enabled": true,
        "path": "rules/rule_endic.json"
      }
    ]
  }
}
