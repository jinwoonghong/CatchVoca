{
  "manifest_version": 3,
  "name": "CatchVoca",
  "version": "1.0.0",
  "description": "웹서핑 중 모르는 단어를 클릭 한 번으로 저장하고, AI 분석과 SM-2 알고리즘으로 효과적으로 암기하세요",
  "author": "CatchVoca Team",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "declarativeNetRequest",
    "notifications",
    "identity"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*",
        "file:///*"
      ],
      "js": [
        "src/content/index.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "naver_dict_referer",
        "enabled": true,
        "path": "rules/rule_endic.json"
      }
    ]
  },
  "commands": {
    "save-word": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Save selected word to CatchVoca"
    },
    "start-quiz": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Start quiz session"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      }
    }
  },
  "oauth2": {
    "client_id": "967073037521-dfs3lt81s9kd4vil2chgf4pemb47sg79.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}


