{
  "manifest_version": 3,
  "name": "CatchVoca",
  "version": "0.1.0",
  "description": "Local-First vocabulary learning with SM-2 spaced repetition",
  "author": "CatchVoca Team",

  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],

  "host_permissions": [
    "https://*/*"
  ],

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "naver_dict_referer",
        "enabled": true,
        "path": "rules/rule_endic.json"
      }
    ]
  },

  "permissions_declarative_net_request": [
    "declarativeNetRequest"
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
