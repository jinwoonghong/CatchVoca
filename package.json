{
  "name": "catchvoca-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Local-First vocabulary learning Chrome extension with SM-2 spaced repetition",
  "author": "CatchVoca Team",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter extension dev",
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @catchvoca/core build",
    "build:extension": "pnpm --filter extension build",
    "test": "pnpm -r test",
    "test:core": "pnpm --filter @catchvoca/core test",
    "test:watch": "pnpm -r test:watch",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
